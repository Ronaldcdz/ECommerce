@using ECommerce.Application.ViewModels.Order
@model ConfirmationOrderViewModel

@{
    ViewData["Title"] = "Compra Confirmada";
}

<div class="row">

    <div class="col-6 offset-3">

        <div class="card">
            <div class="card-header bg-success text-light">
                <h4>@Model.Title</h4>

            </div>
            <div class="card-body">

                <h5 class="mb-3">"@Model.Description"</h5>

                <a asp-controller="Home" asp-action="Index" class="btn btn-info">Regresar</a>

            </div>
        </div>

    </div>

</div>