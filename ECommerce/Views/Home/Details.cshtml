@using ECommerce.Application.ViewModels.Product;

@model ProductDetailsViewModel;

@{
    ViewData["Title"] = "Detalle del Producto";
}



<div class="row">


    <div class="col-10 offset-1">

        <div class="row">




            <div class="col-5">
                <div class="card shadow-sm mb-3">
                    <img class="bd-placeholder-img card-img-top" src="@Model.ImagePath" />

                    <div class="card-body">
                        <h4>@Model.Name</h4>
                        <p class="card-text"><strong>Precio: </strong>@Model.Price</p>
                        <p class="card-text"><strong>Cantidad disponible:</strong> @Model.Quantity</p>
                        <p class="card-text"><strong>Descripcion del Producto:</strong> @Model.Description</p>
                        <p class="card-text"><strong>Categoria:</strong> @Model.Category.Name</p>
                        <p class="card-text"><strong>Descripcion de la Categoria:</strong> @Model.Category.Description</p>



                        <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@Model.Id" class="btn btn-success">Agregar al carrito</a>

                    </div>
                </div>
            </div>




        </div>
    </div>

</div>
