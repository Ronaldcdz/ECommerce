@using ECommerce.Application.ViewModels.Category
@model SaveCategoryViewModel
@{
    ViewData["Title"] = "Borrar Categoria";
}

<div class="row">

    <div class="col-6 offset-3">

        <div class="card">
            <div class="card-header bg-danger text-light">
                <h4>Esta seguro de que desea eliminar la siguiente categoria? </h4>

            </div>
            <div class="card-body">

                <h5 class="mb-3">"@Model.Name"</h5>

                <form method="post" asp-controller="Category" asp-action="DeletePost">

                    <input type="hidden" asp-for="Id" />

                    <a asp-controller="Category" asp-action="Index" class="btn btn-warning">Cancelar</a>
                    <button type="submit" class="btn btn-danger">Eliminar</button>

                </form>

            </div>
        </div>

    </div>

</div>
