@using ECommerce.Application.ViewModels.Category;

@model SaveCategoryViewModel

@{
    bool editMode = Model.Id == 0 ? false : true;
    ViewData["Title"] = "Categorias";
}

<div class="container-fluid">

    <div class="row">

        <div class="col-6 offset-3">

            <div class="card">

                <div class="card-header bg-dark text-light">
                    @if (editMode == true)
                    {
                        <h4>Editango la categoria "@Model.Name"</h4>
                    }
                    else
                    {
                        <h4>Agregando una nueva categoria</h4>
                    }
                </div>

                <div class="card-body">


                        <form method="post" asp-controller="Category" asp-action="@(editMode ? "Edit" : "Create")">

                            <div class="mb-3">
                                <label asp-for="Name" class="form-label">Nombre:</label>
                            <input asp-for="Name" class="form-control" placeholder="Escriba el nombre de la categoria" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Description" class="form-label">Descripcion:</label>
                            <textarea asp-for="Description" class="form-control" placeholder="Escriba la descripcion de la categoria"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>



                            <input type="hidden" asp-for="Id" />
                            <a asp-controller="Category" asp-action="Index" class="btn btn-warning">Regresar</a>

                            <button type="submit" class="btn btn-primary">@(editMode ? "Guardar" : "Agregar")</button>

                        </form>


                </div>

            </div>

        </div>

    </div>

</div>